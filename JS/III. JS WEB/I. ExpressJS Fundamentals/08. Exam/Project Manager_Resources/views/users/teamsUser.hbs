<h1>Teams</h1>
<form action="/searchTeam" class="search">
    <label>Search: {{name}}</label>
    <input type="text" name="search">
    <input type="submit" value="Search">
</form>

<div class="teams">
    {{#each teams}}
        <div class="team">
            <h2>{{name}}</h2>
            <div class="team-info">
                <h3>Members</h3>
                {{#each members}}
                    <p>{{firstName}} {{lastName}}</p>
                {{/each}}

            </div>
            <div class="team-info">
                <h3>Projects</h3>
                {{#each projects}}
                    <p>{{name}}</p>
                {{/each}}

            </div>
        </div>
    {{/each}}
</div>
