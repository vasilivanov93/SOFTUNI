<section>
    <h2>Edit article
        {{#if isAdmin}}
            <div class="controls">
                {{#if isLock}}
                    <form action="/article/unlock/{{id}}" method="POST">
                        <button class="btn btn-danger">Unlock Article</button>
                    </form>
                {{else}}
                    <form action="/article/lock/{{id}}" method="POST">
                        <button class="btn btn-danger">lock Article</button>
                    </form>
                {{/if}}
            </div>
        {{/if}}
    </h2>

    <div class="spacer">
        <form method="POST">
            <label>Article title</label>
            <h3>{{title}}</h3>

            <label>Content</label>
            <textarea name="content">{{content}}</textarea>

            <input type="submit" value="Submit">
        </form>
    </div>
</section>
