<div class="spacer">
    <h2>{{title}}
        {{#if user}}
            <div class="controls">
                {{#if isLock}}
                    <a href="/article/edit/{{_id}}">[edit]</a>
                {{/if}}

                <a href="/article/history/{{_id}}">[history]</a>
            </div>
        {{/if}}
    </h2>

    <article>
        {{#each editArticles}}
            <p>{{content}}</p>
        {{/each}}
    </article>
</div>
