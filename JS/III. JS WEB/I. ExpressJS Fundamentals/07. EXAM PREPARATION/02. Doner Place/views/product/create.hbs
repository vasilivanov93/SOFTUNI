<form action="/product/create" method="post">
    <h2>Create Product</h2>
    <div>
        <label for="category">Category</label>
        <select name="category" id="category">
            <option value="beef">Beef</option>
            <option value="chicken">Chicken</option>
            <option value="lamb">Lamb</option>
        </select>
    </div>
    <div>
        <label for="imageUrl">Image Url</label>
        <input id="imageUrl" name="imageUrl" value="{{imageUrl}}" type="text">
    </div>
    <div>
        <label for="size">Size</label>
        <input id="size" name="size" value="{{size}}" type="number">
    </div>
    <div>
        <strong>Toppings</strong><br>
        <textarea name="toppings" placeholder="Toppings should be provided as comma-separated list. Example: (pickle, tomato, onion, lettuce)!!!">{{toppings}}</textarea>
    </div>
    <div>
        <input type="submit" value="Create" class="button" style="border:0"/>
    </div>
</form>
