        {{#each chickenProducts}}
            <div class="product-card">
                <img src="{{imageUrl}}" style="max-width: 200px">
            </div>
        {{/each}}

        <h2>Beef Donner</h2>
        {{#each beefProducts}}
            <div class="product-card">
                <img src="{{imageUrl}}" style="max-width: 200px">
            </div>
        {{/each}}

        <h2>Lamb Donner</h2>
        {{#each lambProducts}}
            <div class="product-card">
                <img src="{{imageUrl}}" style="max-width: 200px">
            </div>
        {{/each}}
    {{/if}}
</div>

